@{
	var messages =
	TempData[key: Infrastructure.Messages.KeyName] as Infrastructure.Messages;

	if (messages == null || messages.HasAnyPageMessages == false)
	{
		return;
	}

	if (messages.PageErrors.Count != 0)
	{
		<div class="alert alert-danger" role="alert">
			<ul class="mb-0">
				@foreach (var message in messages.PageErrors)
				{
					<li>@(message)</li>
				}
			</ul>
		</div>
	}

	if (messages.PageWarnings.Count != 0)
	{
		<div class="alert alert-warning" role="alert">
			<ul class="mb-0">
				@foreach (var message in messages.PageWarnings)
				{
					<li>@(message)</li>
				}
			</ul>
		</div>
	}

	if (messages.PageSuccesses.Count != 0)
	{
		<div class="alert alert-success" role="alert">
			<ul class="mb-0">
				@foreach (var message in messages.PageSuccesses)
				{
					<li>@(message)</li>
				}
			</ul>
		</div>
	}
}
